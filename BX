local ScreenGui = Instance.new("ScreenGui")
local ToggleButton = Instance.new("TextButton")
local UserInputService = game:GetService("UserInputService")
local VirtualInputManager = game:GetService("VirtualInputManager")

ScreenGui.Parent = game.CoreGui

ToggleButton.Parent = ScreenGui
ToggleButton.BackgroundColor3 = Color3.new(1, 1, 1) -- White background
ToggleButton.BorderSizePixel = 2 -- Black border
ToggleButton.BorderColor3 = Color3.new(0, 0, 0) -- Black edges
ToggleButton.Size = UDim2.new(0, 50, 0, 50) -- Circle dimensions
ToggleButton.Text = "üêß"
ToggleButton.Font = Enum.Font.SourceSans
ToggleButton.TextSize = 24
ToggleButton.TextColor3 = Color3.new(0, 0, 0)
ToggleButton.Active = true      -- Ensure it accepts input
ToggleButton.Selectable = true  -- Allow focus for touch input
ToggleButton.ClipsDescendants = true

-- Set the AnchorPoint so that scaling animations are centered
ToggleButton.AnchorPoint = Vector2.new(0.5, 0.5)
-- Set initial position near the left edge (30 pixels from left) and vertically centered.
local initialPosition = UDim2.new(0, 30, 0.5, 0)
ToggleButton.Position = initialPosition

-- Make it a circle
local uiCorner = Instance.new("UICorner", ToggleButton)
uiCorner.CornerRadius = UDim.new(1, 0)

local dragging = false
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    ToggleButton.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

ToggleButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = ToggleButton.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

ToggleButton.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and input == dragInput then
        update(input)
    end
end)

-- Function to shrink and disappear (with center fixed at initialPosition)
local function shrinkAndDisappear()
    for i = 1, 10 do
        local newSize = 50 - (i * 5)
        ToggleButton.Size = UDim2.new(0, newSize, 0, newSize)
        ToggleButton.Position = initialPosition
        wait(0.05)
    end
    ToggleButton.Visible = false
end

-- Function to grow and appear (with center fixed at initialPosition)
local function growAndAppear()
    ToggleButton.Visible = true
    for i = 10, 1, -1 do
        local newSize = 50 - (i * 5)
        ToggleButton.Size = UDim2.new(0, newSize, 0, newSize)
        ToggleButton.Position = initialPosition
        wait(0.05)
    end
    ToggleButton.Size = UDim2.new(0, 50, 0, 50)
    ToggleButton.Position = initialPosition
end

ToggleButton.MouseButton1Click:Connect(function()
    -- On mobile, skip the key press simulation since devices don't have keyboards
    if not UserInputService.TouchEnabled then
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.K, false, game)
        wait(0.1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.K, false, game)
    end
    shrinkAndDisappear()
end)

-- Simulate UI close button reappearing the toggle button
-- Replace `CloseButton` with your actual UI close button instance as needed.
local CloseButton = Instance.new("TextButton", ScreenGui) -- Example placeholder
CloseButton.Text = "Close UI"
CloseButton.Size = UDim2.new(0, 100, 0, 30)
CloseButton.Position = UDim2.new(0.5, -50, 0.8, 0)
CloseButton.BackgroundColor3 = Color3.new(1, 0, 0)
CloseButton.TextColor3 = Color3.new(1, 1, 1)

CloseButton.MouseButton1Click:Connect(function()
    growAndAppear()
end)

